{% extends '@App/base/base.html.twig' %}



{% block content %}


    <a href="{{ path('auteur') }}"><button>retour au choix des auteurs</button></a>



    {% for livre in livres %}

        <h2>{{ livre.titre }}</h2>

        <h4>le genre du livre est {{ livre.genre }}</h4>
            {% if livre.auteur %}
                <h3>{{ livre.auteur.nom }}</h3>
            {% else %}
                <p>pas d'auteur d√©fini</p>
            {% endif %}
        <p>{{ livre.genre }}</p>
        <p>{{ livre.id }}</p>

        <a href="{{ path('suppr_livre', {'id': livre.id}) }}"><button>supprimer</button></a>
        <a href="{{ path('mise_a_jour_livre', {'id': livre.id}) }}"><button>mise a jour</button></a>
    {% endfor %}


{% endblock %}