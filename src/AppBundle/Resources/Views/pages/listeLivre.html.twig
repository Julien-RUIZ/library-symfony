{% extends '@App/base/base.html.twig' %}



{% block content %}

    {% for livre in livres %}

        <h2>{{ livre.titre }}</h2>
            {% if livre.auteur %}
                <h3>{{ livre.auteur.nom }}</h3>
            {% else %}
                <p>pas d'auteur d√©fini</p>
            {% endif %}
        <p>{{ livre.genre }}</p>
        <p>{{ livre.id }}</p>

        <a href="{{ path('suppr_livre', {'id': livre.id}) }}"><button>supprimer</button></a>
        <a href="{{ path('mise_a_jour_livre', {'id': livre.id}) }}"><button>mise a jour</button></a>
    {% endfor %}






{% endblock %}